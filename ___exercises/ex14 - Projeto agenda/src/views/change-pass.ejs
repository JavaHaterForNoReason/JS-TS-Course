<%- include("./includes/head") %>
<body class="vh-100">
  <%- include("./includes/navbar") %>
  <div class="container-fluid overflow-y-hidden">
    <div class="row vw-100">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 mt-5">
        <h1 class="text-center">Mudar senha</h1>
        <p class="text-center lead">Mude sua senha caso tenha esquecido</p>

        <%- include("./includes/messages") %>

        <div class="row">
          <form
            action="/change-pass/change"
            method="post"
            class="d-flex flex-column"
          >
            <input type="hidden" name="_csrf" value="<%= token %>" />
            <div class="mb-3">
              <label for="email" class="form-label">Email cadastrado</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Nova senha</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
              />
            </div>
            <div class="mb-3">
              <label for="c-password" class="form-label"
                >Confirme a senha</label
              >
              <input
                type="password"
                class="form-control"
                id="confirmPass"
                name="confirmPass"
              />
            </div>

            <button type="submit" class="btn btn-primary w-50 mx-auto">
              Mudar
            </button>
          </form>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
</body>
