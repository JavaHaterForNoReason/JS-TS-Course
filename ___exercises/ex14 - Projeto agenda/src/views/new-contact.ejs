<%- include("./includes/head") %>
<body class="vh-100">
  <%- include("./includes/navbar") %>
  <div class="container-fluid overflow-y-hidden">
    <div class="row vw-100">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 mt-5">
        <h1 class="text-center"><%= title %></h1>
        <p class="text-center lead"><%= subtitle %></p>

        <%- include("./includes/messages") %>

        <div class="row">
          <% if(contact._id) { %>
            <form action="/contact/edit/<%= contact._id %>" method="post" class="d-flex flex-column">
          <% } else { %>
            <form action="/contact/add" method="post" class="d-flex flex-column">
          <% } %>
            <input type="hidden" name="_csrf" value="<%= token %>" />
            <div class="mb-3">
              <label for="name" class="form-label">Nome</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= contact.name %>"
              />
            </div>
            <div class="mb-3">
              <label for="lastname" class="form-label">Sobrenome</label>
              <input
                type="text"
                class="form-control"
                id="lastname"
                name="lastname"
                value="<%= contact.lastname %>"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= contact.email %>"
              />
            </div>
            <div class="mb-3">
              <label for="tel" class="form-label">Telefone</label>
              <input
                type="tel"
                class="form-control"
                id="tel"
                name="tel"
                value="<%= contact.tel %>"
              />
            </div>
            <button type="submit" class="btn btn-primary w-50 mx-auto">
              <%= contact._id ? "Atualizar" : "Criar" %>
            </button>
          </form>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
</body>
